<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>i Pet</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap4-btn.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/windowAlert.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/fancybox/dist/jquery.fancybox.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Images/Header/icon/pet-house_color.png" type="image/x-icon" />

</head>
<body>
    <section id="Header">
        <div class="navbar navbar-inverse navbar-fixed-top mobileMenu">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/Header/icon/pet-house.png" class="logo" />
                @Html.ActionLink("iPet", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav ">
                @{
                    TempData["Mobile"] = "Mobile";
                    Html.RenderAction("GetMenu", "Login");
                }
            </ul>
        </div>
        <div class="slideBar">
            <div class="sysMarginTop" id="logo">
                <img src="~/Images/Header/icon/pet-house.png" class="logo sysPaddingBtm" />
            </div>
            <div id="title">
                <div class="sysTitle">
                    <a href="@Url.Action("Home", "Home")">iPet</a>
                </div>
            </div>
            @{
                TempData["Mobile"] = null;
                Html.RenderAction("GetMenu", "Login");
            }
        </div>
        <div class="navbar navbar-fixed-top sliderHeader">
            <div style="float:right">
                <img src="~/images/Header/user_circle.png" class="userIcon" />
                <span class="userText">
                    @{Html.RenderAction("GetUserName", "Login");}
                </span>
            </div>
        </div>
        <div class="slideNav" id="navPromotion">
            <ul class="ulMarginTop">
                <li><a href="@Url.Action("Park", "Map")"><img src="~/Images/triangle.png" class="triangle" />公園</a></li>
                <li><a href="@Url.Action("Salon", "Map")"><img src="~/Images/triangle.png" class="triangle" />寵物美容</a></li>
                <li><a href="@Url.Action("Hospital","Map")"><img src="~/Images/triangle.png" class="triangle" />寵物醫院</a></li>
            </ul>
        </div>
        <div class="slideNav" id="navBank">
            <ul class="ulMarginTop">
                <li><a href="@Url.Action("Index", "count")"><img src="~/Images/triangle.png" class="triangle" />幼犬計算機</a></li>
                <li><a href="@Url.Action("Index", "kcal")"><img src="~/Images/triangle.png" class="triangle" />卡路里計算機</a></li>
            </ul>
        </div>
        <div class="slideNav" id="navAuth">
            <ul class="ulMarginTop">
                <li><a href="@Url.Action("UserManagement", "Backend")"><img src="~/Images/triangle.png" class="triangle" />會員管理</a></li>
                <li><a href="@Url.Action("", "")"><img src="~/Images/triangle.png" class="triangle" />公告管理</a></li>
                <li><a href="@Url.Action("", "")"><img src="~/Images/triangle.png" class="triangle" />貼文管理</a></li>
            </ul>
        </div>
    </section>
    <section id="Content" class="container-fluid pageBorder">
        @RenderBody()
    </section>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/fancybox/dist/jquery.fancybox.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/windowAlert.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
