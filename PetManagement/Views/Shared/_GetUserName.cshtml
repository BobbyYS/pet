
    <a onclick="SweetConfirm()" class="userName">
        @if (ViewBag.UserName == null)
        {
            <a href="@Url.Action("Index", "Login")">登入 / 註冊</a>
        }
        else
        {
            @ViewBag.UserName
        }
    </a>

<script type="text/javascript">
    function SweetConfirm() {
        swal({
            title: '提醒',
            text: "確定要登出嗎？",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '確定',
            cancelButtonText: '取消'
        }).then(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Logout", "Login")',
                data: 'id = @ViewBag.UserId',
                success: function (data) {
                    swal({
                        title: '登出',
                        text: '您已成功登出!!!!',
                        type: 'success',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: '確定'
                    }).then(function () {
                        setTimeout(function () { location.href = "/Login/Index"; }, 0);
                    })
                }
            })
            return true;
        });
    }
</script>
