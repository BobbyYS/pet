@model PetManagement.ViewModels.MESSAGE.Message
@{
}

<link href="~/Content/Message.css" rel="stylesheet" />

<!--<img class="avatar" src="~/file/public/user.jpg">--> @*正式*@
<img class="avatar" src="~/IPet/file/public/user.jpg"> @*測試*@
<h4><b>@Model.USER_NAME</b></br><span style="font-size: 0.8em">@Model.CRT_DT</span></h4>
<p>
    @Model.MESSAGE
</p>
@if (@Model.IMG != "")
{
    <img src=@Model.IMG />
}
<br />
<hr />


@*顯示留言*@
<div class="collapse" id=@Model.ID>
    @foreach (var item in Model.COMMAND_LIST)
    {
        if (@item.IMG != "" && @item.IMG != null)
        {
            <img class="sm-avatar" src=@item.IMG>
        }
        else
        {
            <img class="sm-avatar" src="~/IPet/file/public/user.jpg">
        }
        <h5>
            @item.USER_NAME
            <span>
                @item.MESSAGE
            </span>
        </h5>
    }

</div>
@*顯示更多留言*@
<div id="moreDiv_@Model.ID">
    @if (Model.COMMAND_LIST.Count() > 0)
    {
        <a id="more_@Model.ID" style="font-size: 0.7em; color: #428bca" data-toggle="collapse" href="#@Model.ID" aria-expanded="false" aria-controls="collapseExample">更多留言...</a>
    }
</div>

@*留言功能*@
<form action="#">
    <div class="input-wrap" style="display:inline; margin-bottom:5px;">
        <input style="width:85%;" type="text" name="name" id="myComment_@Model.ID" placeholder="Add your comment" />
        <button style="background-color:white; border:none;" type="button" onclick="SendCommand(@Model.ID,$('#myComment_'+@Model.ID).val());"><i class="fa fa-paper-plane"></i></button>
    </div>
</form>
